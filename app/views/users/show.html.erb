<h1 class="text-center my-4"><%= @user.username %>'s profile</h1>
<div class="user-info"> 
  <div class="my-4 shadow col-8">
    <div class="card text-center">
      <div class="card-header">
        <h5 class="card-title mx-4 my-4">Name: <%= @user.username %></h5>
      </div>

      <div class="card-body">

        <%= gravatar_for @user, size: 200 %>

        <div class="card-text"><h5 class="mx-4 my-4">Email: <%= @user.email %></h5></div>
        <h5 class="text-center my-4">Users id: #<%= @user.id %></h5>
        <div class="container">
          <%= link_to "Edit profile", edit_user_path(@user), class:"article-actions btn btn-outline-info" %>
        </div>
      </div>
      <div class="card-footer text-muted">
        <h5 class="mx-4 my-4">Member since:  <%= @user.created_at.strftime("%d.%m.%Y") %></h5>
      </div>
    </div>
  </div>
</div>
<br>
<h3 class="text-center my-4"><%= @user.username %>'s articles</h3>

<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render "articles/article" %>
